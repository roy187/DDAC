@{
    ViewBag.Title = "Home Page";
}
<style type="text/css">
    .bgimg {
        background-image: url("https://upload.wikimedia.org/wikipedia/en/thumb/3/39/Maersk_Line_Logo.svg/512px-Maersk_Line_Logo.svg.png");
        background-size: 100% 100%;
    }
</style>

<style type="text/css">
    .button2 {
        height: 150px;
        width: 150px;
        margin: auto;
        margin-top: 200px;
        margin-bottom: 250px;
        display: block;
        color: white;
        text-align: center;
        font-size: 50px;
        line-height: 100px;
        /*Rounded Corners and Shadows*/ -webkit-border-radius: 100px;
        -moz-border-radius: 100px;
        border-radius: 100px;
        -webkit-box-shadow: 2px 2px 4px rgba(0,0,0,0.4);
        -moz-box-shadow: 2px 2px 4px rgba(0,0,0,0.4);
        box-shadow: 2px 2px 4px rgba(0,0,0,0.4);
        /*Ridiculous Gradient Syntax*/ background: #e51d16; /* Old browsers */
        background: -moz-linear-gradient(top, #12b1b6 0%, #12b1b6 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color:#12b1b6 ); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top, #12b1b6 0%,#12b1b6 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top, #12b1b6 0%,#12b1b6 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top, #12b1b6 0%,#12b1b6 100%); /* IE10+ */
        background: linear-gradient(top, #12b1b6 0%,#12b1b6 100%); /* W3C */
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#12b1b6 ', endColorstr='#12b1b6 ',GradientType=0 ); /* IE6-9 */

    }

</style>
<div class="bgimg">
    <div style="height:220px;">
    </div>
    </div>
<div>
    
    <button class="button2" type="button" onclick="location.href='@Url.Action("Login", "User")'" >US</button>
</div>

